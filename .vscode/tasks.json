{
    "version": "2.0.0",
    "tasks": [
        {
            // Default build tasks & dependencies
            "label": "Remove unused imports",
            "type": "shell",
            "command": "autoflake .",
            "presentation": {
                "reveal": "never",
                "revealProblems": "onProblem",
                "close": true
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Sort imports",
            "type": "shell",
            "command": "isort .",
            "presentation": {
                "reveal": "never",
                "revealProblems": "onProblem",
                "close": true
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Format using black",
            "type": "shell",
            "command": "black . --config pyproject.toml",
            "presentation": {
                "reveal": "never",
                "revealProblems": "onProblem",
                "close": true
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Open source control manager",
            "type": "shell",
            "command": "${command:workbench.view.scm}",
            "dependsOn": [
                "Remove unused imports",
                "Sort imports",
                "Format using black",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            // Other tasks
            "label": "Install requirements",
            "type": "shell",
            "command": "python scripts/install_requirements.py",
            "presentation": {
                "revealProblems": "onProblem",
                "close": true
            },
            "problemMatcher": []
        }
    ]
}
